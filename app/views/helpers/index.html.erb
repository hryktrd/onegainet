<h1>Listing helpers</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Skill</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Facebook</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @helpers.each do |helper| %>
      <tr>
        <td><%= helper.category %></td>
        <td><%= helper.skill %></td>
        <td><%= helper.tel %></td>
        <td><%= helper.email %></td>
        <td><%= helper.facebook %></td>
        <td><%= helper.comment %></td>
        <td><%= link_to 'Show', helper %></td>
        <td><%= link_to 'Edit', edit_helper_path(helper) %></td>
        <td><%= link_to 'Destroy', helper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Helper', new_helper_path %>
