<h1>お手伝いさん一覧</h1>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>スキル、特技</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th>Facebookアカウント</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @helpers.each do |helper| %>
      <tr>
        <td><%= helper.category.name %></td>
        <td><%= helper.skill %></td>
        <td><%= helper.tel %></td>
        <td><%= helper.email %></td>
        <td><%= helper.facebook %></td>
        <td><%= helper.comment %></td>
        <td><%= link_to '詳細', helper %></td>
        <td><%= link_to '編集', edit_helper_path(helper) %></td>
        <td><%= link_to '削除', helper, method: :delete, data: { confirm: '削除して良いですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいお手伝いさん登録', new_helper_path %>
